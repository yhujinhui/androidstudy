<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="View Binding 자바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button1" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="53dp"/>
    <Button
            android:text="View Binding 코틀린"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button2" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="변수자바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            android:layout_marginStart="58dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="변수코틀린"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginEnd="58dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="흐름제어자바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp" android:layout_marginStart="57dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <Button
            android:text="흐름제어코틀린"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>